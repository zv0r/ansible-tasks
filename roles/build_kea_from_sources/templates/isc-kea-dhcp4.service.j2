[Unit]
Description=Kea IPv4 DHCP daemon
Documentation=man:kea-dhcp4(8)
Wants=network-online.target
After=network-online.target
After=time-sync.target

[Service]
User={{ kea_service_user }}
Group={{ kea_service_group }}
AmbientCapabilities=CAP_NET_BIND_SERVICE CAP_NET_RAW
Environment="KEA_LOGGER_DESTINATION={{ kea_installation_directory }}/var/log/kea"
ConfigurationDirectory=kea
RuntimeDirectory=kea lock/kea
RuntimeDirectoryPreserve=yes
LogsDirectory=kea
LogsDirectoryMode=0750
StateDirectory=kea
ExecStart={{ kea_installation_directory }}/sbin/kea-dhcp4 -c {{ kea_installation_directory }}/etc/kea/kea-dhcp4.conf

[Install]
WantedBy=multi-user.target