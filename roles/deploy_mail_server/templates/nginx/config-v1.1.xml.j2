<?xml version="1.0" encoding="UTF-8"?>

<clientConfig version="1.1">
  <emailProvider id="{{ mail_domain.name }}">
    <domain>{{ mail_domain.name }}</domain>
    <displayName>yararchive mail service</displayName>
    <displayShortName>yararchivemail</displayShortName>
    <incomingServer type="imap">
      <hostname>imap.{{ mail_domain.name }}</hostname>
      <port>143</port>
      <socketType>STARTTLS</socketType>
      <authentication>password-cleartext</authentication>
      <username>%EMAILADDRESS%</username>
    </incomingServer>
    <outgoingServer type="smtp">
      <hostname>smtp.{{ mail_domain.name }}</hostname>
      <port>587</port>
      <socketType>STARTTLS</socketType>
      <authentication>password-cleartext</authentication>
      <username>%EMAILADDRESS%</username>
    </outgoingServer>
  </emailProvider>
</clientConfig>
